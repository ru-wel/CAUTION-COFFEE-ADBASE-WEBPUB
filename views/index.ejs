    <!-- CAROUSEL START -->
    <div id="carousel" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-indicators">
        <button type="button" data-bs-target="#carousel" data-bs-slide-to="0" class="active" aria-current="true"></button>
        <button type="button" data-bs-target="#carousel" data-bs-slide-to="1"></button>
        <button type="button" data-bs-target="#carousel" data-bs-slide-to="2"></button>
        </div>
        <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="./media/caution-hero1.png" class="d-block w-100" alt="HERO 1">
            <div class="carousel-caption d-none d-md-block" style="background-color: rgba(15, 15, 15, 0.6);">
            <h3 class="text-white">FEATURE</h3>
            <p class="text-white">We didn't start out as simply another coffee shopâ€”in fact, we were their suppliers! Learn more about our very own story.</p>
            <p><a class="btn text-white" style="background-color: #752329;" href="#">Learn more!</a></p>
            </div>
        </div>
        <div class="carousel-item">
            <img src="./media/espresso-hero.png" class="d-block w-100" alt="HERO 2">
            <div class="carousel-caption d-none d-md-block" style="background-color: rgba(15, 15, 15, 0.6);">
            <h3 class="text-white">COFFEE AND BREW GEAR</h3>
            <p class="text-white">Are you looking for a supplier for your coffee shop? We've got you covered!</p>
            <p><a class="btn text-white" style="background-color: #752329;" href="/gear">Check Now!</a></p>
            </div>
        </div>
        <div class="carousel-item">
            <img src="./media/caution-hero3.png" class="d-block w-100" alt="HERO 3">
            <div class="carousel-caption d-none d-md-block" style="background-color: rgba(15, 15, 15, 0.6);">
            <h3 class="text-white">VISIT US!</h3>
            <p class="text-white">Celebrate National Teacher's Month with us! Teachers enjoy a 10% discount!</p>
            <p><a class="btn text-white" style="background-color: #752329;" href="#location">Visit Us!</a></p>
            </div>
        </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carousel" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carousel" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
        </button>
    </div>
    <!-- CAROUSEL END -->

