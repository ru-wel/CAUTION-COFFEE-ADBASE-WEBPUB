                                    <h5 class="card-title"><%= messages[rating - 1] %></h5> 
                                    <p class="card-text"><%= reviews.message %></p>
                                </blockquote>
                                <h4 class="mb-2"><%= reviews.username %></h4>
                                <p class="card-text"><%= reviews.dateCreated %></p>
                                </figcaption>
                            </figure>
                            </div>
                        </div>
                    </div>
                     <!-- REVIEW CARDS -->

                <% }) %>
            <% } %>

