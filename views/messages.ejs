<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>CUSTOMER MESSAGES | CAUTION COFFEE</title>
    <link rel="icon" href="./media/favicon-l.png" type="image/png">

    <!-- STYLE LINKS -->
    <link rel="stylesheet" href="./css/style.css">
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:ital,wght@0,400..900;1,400..900&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="https://unpkg.com/bs-brain@2.0.4/components/testimonials/testimonial-3/assets/css/testimonial-3.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css"></link>
</head>

<body>

    <%- include('header.ejs') %>

    <section style="background-color: #eee;">

        <h1 style="text-align: center; padding: 20px; font-family: 'Playfair Display', serif; font-weight: 900; color:#752329">Customer Messages</h1>

        
        <input class="mb-5" type="text" id="search" placeholder="Search" style="padding: 10px; width: 30%; text-align: center; margin: 20px; border-radius: 8px; border: 2px solid #752329;" onkeyup="searchMessages()">
        <br>
        
        <div class="container-fluid overflow-hidden"> 
            <div class="row gy-4 gy-md-0 gx-xxl-5">

                <% if (messages && messages.length >= 1) { %> <!-- CHECK IF MAY LAMAN BA YUNG REVIEWS DATABASE -->
                    <% messages.forEach(messages => { %>
                        <!-- MESSAGE CARDS -->
                        <div class="col-12 col-md-4 mb-3 message-item">
                            <div class="card border-0 border-bottom shadow-sm rounded-card" style="border-color: #752329; background-color:#E8E8E1">
                                <div class="card-body p-4 p-xxl-5">
                                <figure>
                                    <figcaption>
                                        <blockquote class="mb-4">
                                            <h4 class="mb-2 name" style="border: 2px solid #752329; border-radius: 50px; padding: 10px 15px; background-color: #752329; color: white !important; display: inline-block; text-align: center; font-size: 15px; margin: 0 auto;"><%= messages.name %> (@<%= messages.username %>)</h4> 
                                            <h4 class="mb-2 email" style="border: 2px solid #752329; border-radius: 50px; padding: 10px 15px; background-color: #752329; color: white !important; display: inline-block; text-align: center; font-size: 15px; margin: 0 auto;"><%= messages.contact %> | <%= messages.email %></h4> 
                                            <br><br>
                                            <p class="card-text message" style="font-family: 'Poppins', sans-serif; font-weight: 500; font-size: 18px; font-style: normal;"><%= messages.message %></p> 
                                            <p class="card-text"><%= messages.dateCreated %></p> 
                                        </blockquote>
                                    </figcaption>
                                </figure>
                                </div>
                            </div>
                            <br><br><br><br>
                        </div>
                        <!-- MESSAGE CARDS -->

                    <% }) %>
                <% } %>

            </div>
        </div>
    </section>

    <%- include('footer.ejs') %>

    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.10.2/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script>
        document.getElementById('home').removeAttribute("class", 'active');
        document.getElementById('home').setAttribute("class", "nav-link")
        document.getElementById('dashboard').setAttribute("class", 'nav-link dropdown-toggle active');
    </script>
    <script>
        function searchMessages() {
            const search = document.getElementById('search').value.toLowerCase();
            const messages = document.querySelectorAll('.message-item'); 

            messages.forEach(message => {
                const name = message.querySelector('.name').innerText.toLowerCase();
                const email = message.querySelector('.email').innerText.toLowerCase();
                const textmessage = message.querySelector('.message').innerText.toLowerCase();

                if (name.includes(search) || email.includes(search) || textmessage.includes(search)) {
                    message.style.display = ""; 
                } else {
                    message.style.display = "none"; 
                }
            });
        }
    </script>

</body>